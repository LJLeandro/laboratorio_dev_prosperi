@model IEnumerable<laboratorio_dev_prosperi_mvc.Models.OrdemDeServico>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Nova Ordem de Serviço</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeroServico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TituloServico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataExecucaoServico)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroServico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TituloServico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataExecucaoServico)
            </td>
            <td>
                @Html.ActionLink("Alterar", "Edit", new { numeroDeServico=item.NumeroServico }) |
                @Html.ActionLink("Detalhes", "Details", new { numeroDeServico=item.NumeroServico }) |
                @Html.ActionLink("Excluir", "Delete", new { numeroDeServico=item.NumeroServico })
            </td>
        </tr>
}
    </tbody>
</table>
